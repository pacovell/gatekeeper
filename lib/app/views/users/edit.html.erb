<h1>Edit user info</h1>
<% form_for @user do |f| %>
<table>
<tr><th>Email:</th><td><%= f.text_field :email %></td></tr>
<tr><th>Password:</th><td><%= f.password_field :password %></td></tr>
<tr><th>Again:</th><td><%= f.password_field :password_confirmation %></td></tr>
<tr><th colspan='2'><%= f.submit "Save" %></th></tr>
</table>
<% end %>